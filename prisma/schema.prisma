// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// the user model
model User {
  id        String                     @id @default(uuid()) @map("_id") @db.ObjectId
  name      String                     @unique
  email     String                     @unique
  password  String // hashed password of the user
  createdAt DateTime                   @default(now())
  updatedAt DateTime                   @updatedAt
  documents DocumentsOnCollaborators[]
}

// the document model
model Document {
  id            String                     @id @default(uuid()) @map("_id") @db.ObjectId
  title         String
  content       String
  collaborators DocumentsOnCollaborators[]
}

// model for the many to many relationships
// user can have many collaborating documents and a document can have many collaborators
model DocumentsOnCollaborators {
  id         String   @id @default(uuid()) @map("_id") @db.ObjectId
  User       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  Document   Document @relation(fields: [documentId], references: [id])
  documentId String   @db.ObjectId
  assignedAt DateTime @default(now())
}